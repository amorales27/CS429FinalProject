01\"] = 1,\n    [\"CITEREFJessee1984\"] = 1,\n    [\"CITEREFJohnson1992\"] = 1,\n    [\"CITEREFLeSueur1990\"] = 1,\n    [\"CITEREFLee1877\"] = 1,\n    [\"CITEREFLund2012\"] = 1,\n    [\"CITEREFMcGee1909\"] = 1,\n    [\"CITEREFMcLaws1965\"] = 1,\n    [\"CITEREFOffice_of_the_Secretary_of_State_of_Missouri1841\"] = 1,\n    [\"CITEREFPeck1839\"] = 1,\n    [\"CITEREFPerkins1994\"] = 1,\n    [\"CITEREFQuinn1994\"] = 1,\n    [\"CITEREFReorganized_Church_of_Jesus_Christ_of_Latter_Day_Saints1920\"] = 1,\n    [\"CITEREFRoberts1900\"] = 1,\n    [\"CITEREFRoberts1965\"] = 1,\n    [\"CITEREFRobinson\"] = 1,\n    [\"CITEREFSmithRigdonSmith1840\"] = 1,\n    [\"CITEREFThorp1924\"] = 1,\n    [\"CITEREFTurner1842\"] = 1,\n    [\"CITEREFVan_Wagoner1994\"] = 1,\n    [\"CITEREFWhitmer1832–1846\"] = 1,\n    [\"CITEREFWilliam_G._Hartley2017\"] = 1,\n}\ntemplate_list = table#1 {\n    [\"\\\"'\"] = 1,\n    [\"American conflicts\"] = 1,\n    [\"Citation\"] = 21,\n    [\"Cite book\"] = 14,\n    [\"Cite journal\"] = 4,\n    [\"Cite news\"] = 1,\n    [\"Cite thesis\"] = 1,\n    [\"Cite web\"] = 3,\n    [\"Commons category\"] = 1,\n    [\"Convert\"] = 3,\n    [\"Dead link\"] = 3,\n    [\"Div col\"] = 1,\n    [\"Div col end\"] = 1,\n    [\"Harvnb\"] = 99,\n    [\"History of Missouri\"] = 1,\n    [\"Infobox military conflict\"] = 1,\n    [\"Latter-day Saints\"] = 1,\n    [\"Main article\"] = 5,\n    [\"Mormon Militias\"] = 1,\n    [\"Mormon War\"] = 1,\n    [\"Portal\"] = 1,\n    [\"Refbegin\"] = 1,\n    [\"Refend\"] = 1,\n    [\"Reflist\"] = 1,\n    [\"See also\"] = 2,\n    [\"Sfn\"] = 7,\n    [\"Short description\"] = 1,\n    [\"Sic\"] = 4,\n    [\"Use American English\"] = 1,\n    [\"Use mdy dates\"] = 1,\n    [\"Webarchive\"] = 3,\n}\narticle_whitelist = table#1 {\n}\n"},"cachereport":{"origin":"mw2309","timestamp":"20240412162138","ttl":2592000,"transientcontent":false}}});});</script>
